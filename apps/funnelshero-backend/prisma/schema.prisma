// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId Int @id @default(autoincrement())

  username String @unique

  firstName String
  lastName String

  password String
  email String @unique

  type String

  stripeId String @unique
  activeSubscription String?
  inTrial Boolean @default(false)
  isTrialLegit Boolean @default(true)
  activePrice String
  status String @default("")

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  verified Boolean @default(false)

  hash Hash?

  funnels Funnel[]

  @@map("users")
}

model Hash {
  hashId Int @id @default(autoincrement())

  hash String

  userId Int @unique
  user User @relation(fields: [userId], references: [userId])

  @@map("hashes")
}

model Token {
  tokenId Int @id @default(autoincrement())
  createdAt DateTime @default(now())

  token String @unique

  @@map("tokens")
}

model Funnel {
  funnelId   Int @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  title String @unique
  image String?
  metatags String?

  category String
  baseDomain String?
  proDomain String?
  favicon String?

  isActive Boolean @default(false)
  
  allowedNotifications Boolean @default(true)

  userId Int
  user User @relation(fields: [userId], references: [userId])

  pages Page[]

  @@map("funnels")
}

model Page {
  pageId  Int @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  title String
  data String
  metatags String?

  isPublished Boolean @default(false) 
  publishedAt DateTime?

  link String?

  funnelId Int
  funnel Funnel @relation(fields: [funnelId], references: [funnelId])

  @@map("pages")
}